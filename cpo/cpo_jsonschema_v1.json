{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://campaign-press-ontology.org/schema/cpo_v1.json",
  "title": "Campaign Press Ontology (CPO) \u2014 v1",
  "type": "object",
  "properties": {
    "@context": {},
    "@type": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "@id": {
      "type": "string",
      "format": "uri"
    },
    "headline": {
      "type": "string",
      "minLength": 3
    },
    "datePublished": {
      "type": "string"
    },
    "inLanguage": {
      "type": "string"
    },
    "author": {
      "type": "object"
    },
    "articleBody": {
      "type": "string",
      "minLength": 20
    },
    "cpo:releaseType": {
      "type": "string",
      "enum": [
        "announcement",
        "endorsement",
        "fundraising",
        "policy",
        "contrast",
        "crisis",
        "mobilization",
        "operations"
      ]
    },
    "cpo:subtype": {
      "type": "string",
      "pattern": "^[A-Z]{3}(\\.[A-Z]{2,4}){1,3}$"
    },
    "cpo:tone": {
      "type": "string",
      "enum": [
        "positive",
        "negative",
        "neutral",
        "mixed"
      ]
    },
    "cpo:issueArea": {
      "type": "string"
    },
    "cpo:claims": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "const": "cpo:Claim"
          },
          "@id": {
            "type": "string"
          },
          "cpo:claimText": {
            "type": "string",
            "minLength": 10
          },
          "cpo:claimDate": {
            "type": "string"
          },
          "cpo:evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "@type": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                },
                "cpo:excerpt": {
                  "type": "string"
                }
              },
              "required": [
                "url"
              ]
            },
            "minItems": 1
          }
        },
        "required": [
          "@type",
          "cpo:claimText",
          "cpo:evidence"
        ]
      }
    },
    "cpo:cta": {
      "type": "object"
    },
    "cpo:audiences": {
      "type": "array"
    },
    "cpo:provenance": {
      "type": "object",
      "properties": {
        "cpo:createdBy": {
          "type": "string"
        },
        "cpo:reviewedBy": {
          "type": "string"
        },
        "cpo:reviewDate": {
          "type": "string"
        }
      }
    },
    "cpo:labelId": {
      "type": "string"
    }
  },
  "required": [
    "@type",
    "headline",
    "datePublished",
    "articleBody",
    "cpo:releaseType",
    "cpo:subtype"
  ]
}